{% extends "@admin/layout.twig" %}
{% block title "Create" %}
{% block body %}
    <h1>Ajouter la vente flash d'ID: {{ item.id }}</h1>
    <form action="{{ path('admin.flashsale.create') }}" method="post">
    <div class="form-group">
        <label for="price">  Prix de la venteflash   </label>
        <input type="text" class="form-control" id="price" name="price">
    </div>


    <div class="form-group">
         <label for="description">  Description  </label>
         <textarea class="form-control" name="description" id="description">
         </textarea>
    </div>
    <div class="form-group">
        <label for="state">  Statut  </label>
        <input type="radio" class="checkbox" name="state" id="state" value="on">
        <input type="radio" class="checkbox" name="state" id="state" value="off">
    </div>
        <button class="btn btn-primary" type="submit" >Ajouter</button>
    </form>

{% endblock %}