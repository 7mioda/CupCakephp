{% extends "@admin/layout.twig" %}
{% block body %}

<p class="text-right">
    <a href="{{ path('admin.offer.create') }}" class="btn btn-primary">
        Ajouter venteflash
    </a>
</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Prix</td>
                <td>Prix hors promotion</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
           {%  for item in items %}
               <tr>
                   <td>{{ item.id }}</td>
                   <td>{{ item.price }}</td>
                   <td>{{ item.old_price }}</td>
                   <td>{{ item.product }}</td>
                   <td>
                       <a href="{{ path('admin.offer.edit',{id: item.id}) }}" class="btn btn-primary">Editer</a>
                       <form style="display: inline" action="{{ path('admin.offer.delete',{id: item.id}) }}" method="POST" onsubmit="return confirm('Est vous sure');">
                           <input type="hidden" name="_method" value="DELETE">
                           <button class="btn btn-danger">Supprimer</button>
                       </form>
                   </td>

               </tr>

            {%  endfor %}
        </tbody>
    </table>


{% endblock %}